
{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "allowImportingTsExtensions": false,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/test/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
